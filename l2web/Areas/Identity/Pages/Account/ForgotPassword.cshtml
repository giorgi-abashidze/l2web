@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1 class="text-light">@ViewData["Title"]</h1>
<h4 class="text-light"> Enter your email.</h4>
<hr />
<div class="row text-light">
    <div class="col-md-4">
        <form method="post">

            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="Input.CaptchaCode"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <img id="img-captcha" src="~/captcha-image" />
                    </div>

                    <input type="text"
                           asp-for="Input.CaptchaCode"
                           class="form-control bg-secondary text-light ml-2"
                           autocomplete="off"
                           minlength="4"
                           maxlength="4" />
                </div>
                <span asp-validation-for="Input.CaptchaCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<script>
    $("html, body").animate({ scrollTop: document.body.getElementsByTagName("main")[0].scrollHeight}, "slow");
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
